{
  "name": "port-selector",
  "version": "0.1.1",
  "description": "a cross-platform Node library written in TypeScript and implemented in Rust. It mainly provides port availability checking and filtering ports based on filter conditions.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "npm run rs:build-release && tsup",
    "commit": "git-cz",
    "rs:build": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "rs:build-debug": "npm run rs:build --",
    "rs:build-release": "npm run rs:build -- --release",
    "rs:test": "cargo test",
    "test": "jest",
    "lint:script": "eslint --ext .js,.ts --fix --quiet ./",
    "postinstall": "husky install"
  },
  "author": "ZingerLittleBee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZingerLittleBee/port-selector.git"
  },
  "bugs": {
    "url": "https://github.com/ZingerLittleBee/port-selector/issues"
  },
  "homepage": "https://github.com/ZingerLittleBee/port-selector",
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.30",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "cargo-cp-artifact": "0.1.6",
    "commitizen": "4.2.4",
    "commitlint": "16.2.4",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "git-cz": "4.8.0",
    "husky": "7.0.4",
    "jest": "^28.0.3",
    "prettier": "2.6.2",
    "ts-jest": "^28.0.0-next.3",
    "tsup": "5.12.6",
    "typescript": "4.6.4"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json}": [
      "npm run lint:script",
      "git add --force"
    ]
  }
}